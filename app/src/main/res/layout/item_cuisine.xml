<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:id="@+id/cuisineCard">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cuisineImg"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:src="@drawable/indian_cuisine_icon"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cuisineName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cuisineImg"
        app:layout_constraintStart_toStartOf="@+id/cuisineImg"
        app:layout_constraintTop_toBottomOf="@+id/cuisineImg" />
</androidx.constraintlayout.widget.ConstraintLayout>
